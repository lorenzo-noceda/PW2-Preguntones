<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--  CSS GENERAL   -->
    <link href="/PW2-Preguntones/public/css/main.css" rel="stylesheet">
    <!--  CSS PERFIL   -->
    <!--    <link href="/PW2-Preguntones/public/css/home.css" rel="stylesheet">-->
    <title>Home</title>
</head>
<body>
<header class="col-12 bg-primary text-white styledHeader">
    <nav class="col-10 col-md-5 col-xl-4 d-flex mx-auto align-items-center">
        <div class="col-3 d-flex justify-content-start">
            <a href="/PW2-Preguntones/login/cerrarSesion"
               class="text-decoration-none btn-sm btn-danger btn">
                Cerrar sesión
            </a>
        </div>
        <a href="/PW2-Preguntones/home"
           class="text-white text-decoration-none col-6 d-flex justify-content-center">
            <h3>Preguntones</h3>
        </a>
        <div class="col-3 d-flex justify-content-end">
            <a href="/PW2-Preguntones/juego/status?id={{id_usuario}}"
            class="userImageContainer">
            <img src="/PW2-Preguntones/public/images/info.svg"/>
            </a>
            <a href="/PW2-Preguntones/perfil?id={{id_usuario}}"
            class="userImageContainer">
            <img src="/PW2-Preguntones/public/images/user.png"/>
            </a>
        </div>
    </nav>
</header>
<main class="ccol-12 col-sm-8 col-md-7 col-lg-5 col-xl-4
            p-4 d-flex flex-column mx-auto gap-4">
    <form action="/PW2-Preguntones/admin/actualizar"
          method="POST"
          class="col-12 d-flex flex-column gap-3">
        <h3>Editar pregunta</h3>
        {{#pregunta}}
            <div class="col-12">
                <label for="pregunta" class="form-label">Pregunta</label>
                <input class="form-control"
                       type="text"
                       id="pregunta"
                       name="pregunta"
                       value="{{texto}}"
                       required>
                <input type="hidden" value="{{id}}" name="preguntaId">
            </div>
        {{/pregunta}}
        {{#respuestas}}
            <div class="row">
                <div class="col form-group">
                    <label for="nombre" class="form-label">Respuesta {{idAumentado}}</label>
                    <input class="form-control"
                           type="text"
                           name="respuestas[]"
                           value="{{respuesta_str}}"
                           required>
                </div>
            </div>
        {{/respuestas}}
    <div class="d-flex flex-column gap-2">
        <p class="p-0 m-0"><strong>Seleccione la opción correcta</strong></p>
    <div class="d-flex gap-3">
        {{#respuestas}}
            <label>
                <input type="radio" value="{{idAumentado}}" name="correcta" {{checked}}>{{idAumentado}}
            </label>
        {{/respuestas}}
        </div>
        </div>
        <div class="d-flex flex-column gap-2">
            <p class="p-0 m-0"><strong>Seleccione una categoría</strong></p>
            <select class="form-select" name="categoria">
                <option disabled>Seleccione una</option>
                {{#pregunta}}
                    <option value="{{id_categoria}}" selected>{{categoria}}</option>
                {{/pregunta}}
                {{#categorias}}
                    <option value="{{id}}">{{descripcion}}</option>
                {{/categorias}}
            </select>
        </div>
        {{#error}}
            <p class="text-danger m-0 p-0">{{error}}</p>
        {{/error}}
        <button type="submit" class="btn btn-success mt-3">Guardar cambios</button>
    </form>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>