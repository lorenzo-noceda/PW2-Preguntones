<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--  BOOTSTRAP  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--  ESTILOS GENERALES   -->
    <link href="/PW2-Preguntones/public/css/main.css" rel="stylesheet">
    <!--  ESTILOS LOGIN  -->
    <link href="/PW2-Preguntones/public/css/login.css" rel="stylesheet">
    <title>{{formTitle}}</title></head>
<body>
<main class="form-container col-11 col-sm-9 col-md-6 col-lg-4 col-xl-3 p-4">
    <h1>{{formTitle}}</h1>
    {{#error}}
        <h3 class="text-danger">{{error}}</h3>
    {{/error}}
    <form action="{{formAction}}" method="POST" class="d-flex flex-column align-items-center">
        <div class="form-group col-12">
            <label for="username">Nombre de Usuario</label>
            <input class="col-12 rounded-4"
                   type="text"
                   id="username"
                   name="username"
                   placeholder="Inserte su nombre de usuario" required>
        </div>
        <div class="form-group col-12">
            <label for="password">Contraseña</label>
            <div class="col-12 d-flex flex-wrap">
                <input type="password"
                       id="password"
                       name="password"
                       class="col-10"
                       placeholder="Inserte su contraseña"
                       required>
                <button type="button" class="col-2 password-toggle" onclick="togglePassword()">👁️</button>
            </div>
        </div>
        <div class="remember-me d-flex align-items-center gap-2">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember" class="m-0">Recuérdame</label>
        </div>
        <button type="submit" class="mx-auto">{{submitButtonText}}</button>
    </form>
    <div class="register-link">
        {{registerPrompt}} <a href="{{registerLink}}">{{registerLinkText}}</a>
    </div>
</main>
<script>
    function togglePassword() {
        var passwordInput = document.getElementById('password');
        var passwordToggle = document.querySelector('.password-toggle');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            passwordToggle.textContent = '🙈';
        } else {
            passwordInput.type = 'password';
            passwordToggle.textContent = '👁️';
        }
    }
</script>
</body>
</html>