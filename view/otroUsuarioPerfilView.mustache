<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--  CSS GENERAL   -->
    <link href="/PW2-Preguntones/public/css/main.css" rel="stylesheet">
    <!--  CSS admin   -->
    <link href="/PW2-Preguntones/public/css/otroUsuarioPerfilView.css" rel="stylesheet">
    <title>Home</title>
</head>
<body>
{{#usuario}}
    <header class="col-12 bg-primary text-white styledHeader">
        <nav class="col-10 col-md-5 col-xl-4 d-flex mx-auto align-items-center">
            <div class="col-3 d-flex justify-content-start">
                <a href="/PW2-Preguntones/login/cerrarSesion"
                   class="text-decoration-none btn-sm btn-danger btn">
                    Cerrar sesión
                </a>
            </div>
            <a href="/PW2-Preguntones/home"
               class="text-white text-decoration-none col-6 d-flex justify-content-center">
                <h3>Preguntones</h3>
            </a>
            <div class="col-3 d-flex justify-content-end">
                <a href="/PW2-Preguntones/perfil?id={{id}}" class="userImageContainer">
                <img src="/PW2-Preguntones/public/images/user.png"/>
                </a>
            </div>
        </nav>
    </header>
{{/usuario}}
{{#usuarioBuscado}}
<main class="col-11 col-sm-8 col-md-7 col-lg-5 col-xl-4 mx-auto py-4 text-white d-flex flex-column gap-4">
    <!-- TARJETA USUARIO   -->
    <div class="col-12 p-4 bg-primary d-flex flex-column gap-4">
        <!-- (IMAGEN USUARIO + UBICACIÓN) + PUNTAJES - ROW   -->
        <div class="col-12 d-flex flex-wrap justify-content-between">
            <!-- (IMAGEN USUARIO + UBICACIÓN - COL -->
            <div class="d-flex flex-column gap-2 col-6">
                <div class="d-flex gap-2 flex-wrap align-items-center">
                    <div class="userImageContainer">
                        <img src="/PW2-Preguntones/public/images/user.png" alt="Imagen de Usuario"/>
                    </div>
                    <p class="m-0 p-0 fw-semibold fs-5">{{username}}</p>
                </div>
                <div class="d-flex gap-2 flex-wrap align-items-center">
                    <div class="userUbicationContainer">
                        <img src="/PW2-Preguntones/public/images/location.png" alt="Ubicacion Logo"/>
                    </div>
                    <p class="m-0 p-0">{{ciudad}}, {{pais}}.</p>
                </div>
            </div>
            <!--   PUNTAJE + PUESTO -->
            <div class="col-6 d-flex flex-column gap-2 align-items-center lineaSeparadora">
                <p class="m-0 p-0">
                    <strong>
                        Puesto mundial:
                    </strong>
                    #null</p>
                <p class="m-0 p-0">
                    <strong>
                        Puntaje:
                    </strong>
                    {{puntajeAcumulado}}</p>
            </div>
        </div>
        <!--   QR-->
        <div class="d-flex align-items-center justify-content-center">
            <div class="bg-primary-subtle">
                {{{qr}}}
            </div>
        </div>
    </div>
    <a class="mx-auto" href="/PW2-Preguntones/home/ranking">
        <button class="btn btn-primary">Volver</button>
    </a>
    <div class="col-12 bg-primary d-flex flex-column gap-3 p-3">
        <h2 class="m-0 p-0">Partidas</h2>
        <div class="col-8 mx-auto">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-primary text-center">
                <tr>
                    <th>Fecha</th>
                    <th>Puntaje</th>
                </tr>
                </thead>
                <tbody>
                <!-- Aquí irían tus datos dinámicos -->
                {{#partidas}}
                    <tr>
                        <td>{{fecha_jugada}}</td>
                        <td>{{puntaje}}</td>
                    </tr>
                {{/partidas}}
                <!-- Fin de datos dinámicos -->
                </tbody>
            </table>
        </div>
    </div>
</main>
{{/usuarioBuscado}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>