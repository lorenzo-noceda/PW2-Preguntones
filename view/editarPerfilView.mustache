<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--  CSS GENERAL   -->
    <link href="/PW2-Preguntones/public/css/main.css" rel="stylesheet">
    <title>Editar perfil</title>
</head>
<body>
<header class="col-12 bg-primary text-white styledHeader">
    <nav class="col-10 col-md-5 col-xl-4 d-flex justify-content-between mx-auto align-items-center">
        <a href="/PW2-Preguntones/login/cerrarSesion"
           class="col-3 d-flex justify-content-start text-decoration-none">
            <button class="btn btn-danger">Cerrar sesión</button>
        </a>
        <a href="/PW2-Preguntones/home"
           class="text-white text-decoration-none col-6 d-flex justify-content-center">
            <h3>Preguntones</h3>
        </a>
        <div class="col-3 d-flex justify-content-end">
            <a href="/PW2-Preguntones/perfil?id={{id_usuario}}" class="userImageContainer">
            <img src="/PW2-Preguntones/public/images/user.png"/>
            </a>
        </div>
    </nav>
</header>
<main class="form-container col-12 d-flex flex-column align-items-center text-white">
    {{#usuario}}
        <form action="/PW2-Preguntones/perfil/actualizar"
              method="POST"
              class="col-11 col-sm-8 col-md-7 col-lg-4 mx-auto d-flex flex-column gap-1 p-4">
            <h3>Editar perfil</h3>
            <div class="col-12">
                <label for="email" class="form-label">Dirección de correo</label>
                <input class="form-control bg-dark-subtle"
                       type="email"
                       id="email"
                       name="email"
                       value="{{email}}"
                       readonly
                       required>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input class="form-control"
                           type="text"
                           name="nombre"
                           value="{{nombre}}"
                           required>
                </div>
                <div class="col form-group">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input class="form-control"
                           type="text"
                           name="apellido"
                           value="{{apellido}}"
                           required>
                </div>
            </div>
            <!--   FECHA DE NACIMIENTO + NOMBRE DE USUARIO  -->
            <div class="row">
                <div class="form-group col">
                    <label for="anio_nacimiento" class="form-label">Año de nacimiento</label>
                    <input class="form-control"
                           type="text"
                           id="anio_nacimiento"
                           name="anio_nacimiento"
                           value="{{anio_nacimiento}}"
                           readonly
                           required>
                </div>
                <div class="form-group col">
                    <label for="username" class="form-label">Nombre de usuario</label>
                    <input class="form-control bg-dark-subtle"
                           type="text"
                           id="username"
                           name="username"
                           value="{{username}}"
                           readonly
                           required>
                </div>
            </div>

            <!--  SEXO   -->
            <div class="col-12">
                <label for="sexo" class="form-label">Sexo</label>
                <select id="sexo" name="id_sexo" class="form-select">
                    <option value="{{sexoId}}" selected>{{sexoNombre}}</option>
                    {{#sexo}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/sexo}}
                </select>
            </div>
            <input type="hidden" value="{{password}}"/>
            {{#error}}
                <p class="text-danger m-0 p-0">{{error}}</p>
            {{/error}}
            <button type="submit" class="btn btn-success mt-3">Guardar cambios</button>
        </form>
    {{/usuario}}
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>