<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--  CSS GENERAL   -->
    <link href="/PW2-Preguntones/public/css/main.css" rel="stylesheet">
    <!--  CSS admin   -->
    <link href="/PW2-Preguntones/public/css/admin.css" rel="stylesheet">
    <title>Home</title>
</head>
<body>
<header class="col-12 bg-primary text-white styledHeader">
    <nav class="col-10 col-md-5 col-xl-4 d-flex mx-auto align-items-center">
        <!--        <div class="hambugerContainer">-->
        <!--            <img src="/PW2-Preguntones/public/images/hamburger.png"/>-->
        <!--        </div>-->
        <a href="/PW2-Preguntones/login/cerrarSesion"
           class="col-3 d-flex justify-content-start text-decoration-none">
            <button class="btn btn-danger">Cerrar sesión</button>
        </a>
        <a href="/PW2-Preguntones/home"
           class="text-white text-decoration-none col-6 d-flex justify-content-center">
            <h3>Preguntones</h3>
        </a>
        <div class="col-3 d-flex justify-content-end">
            <a href="/PW2-Preguntones/perfil?id={{id_usuario}}" class="userImageContainer">
            <img src="/PW2-Preguntones/public/images/user.png"/>
            </a>
        </div>
    </nav>
</header>
<main class="col-11 col-sm-8 col-md-7 col-lg-5 col-xl-4
d-flex flex-column mx-auto bor1 p-2">
    <h1 class="bor1 text-center">Adminstración</h1>
    <div class="d-flex gap-2 flex-column mx-auto align-items-center bor2 col-12">
        <h3>Preguntas</h3>
        <div class="col-12 d-flex flex-column gap-2">
            <a href="/PW2-Preguntones/admin/preguntas" class="btn btn-primary">
                Ver todas
            </a>
            <a href="/PW2-Preguntones/admin/reportadas" class="btn btn-danger">
                Ver reportadas
            </a>
            <a href="/PW2-Preguntones/admin/sugeridas" class="btn btn-warning">
                Ver sugeridas
            </a>
        </div>
    </div>
    <div class="d-flex flex-column gap-2">
        <h3>Información</h3>
        <div class="d-flex flex-column">
            <p class="p-0 m-0">Respondidas: {{respondidas}}/{{todas}}</p>
            <p class="p-0 m-0">Correctas: {{correctas}}</p>
            <p class="p-0 m-0">Malas (respondidas - correctas): {{malas}}</p>
            <p class="p-0 m-0">Partidas jugadas: {{partidas}}</p>
        </div>
        <div class="d-flex flex-column gap-2">
            <a href="/PW2-Preguntones/juego/resetRespondidasDelUsuario">
                <button class="btn btn-success">Reset respondidas</button>
            </a>
            <a href="/PW2-Preguntones/juego/resetPartidasJugadas">
                <button class="btn btn-success">Reset partidas jugadas</button>
            </a>
        </div>
        <h3>Cambiar de usuario</h3>
        <div class="d-flex flex-column gap-2">
            {{#usuarios}}
                <a href="/PW2-Preguntones/juego/cambiarPerfil?id={{id}}">
                <button class="btn btn-warning">{{username}}</button>
                </a>
            {{/usuarios}}
        </div>
        <h3>Partidas Jugadas</h3>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-primary text-center">
                <tr>
                    <th>ID de Partida</th>
                    <th>ID del Usuario</th>
                    <th>Puntaje</th>
                </tr>
                </thead>
                <tbody>
                <!-- Aquí irían tus datos dinámicos -->
                {{#partidasJugadas}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{jugador_id}}</td>
                        <td>{{puntaje}}</td>
                    </tr>
                {{/partidasJugadas}}
                <!-- Fin de datos dinámicos -->
                </tbody>
            </table>
        </div>
        <h3>Ranking</h3>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-primary text-center">
                <tr>
                    <th>ID del Usuario</th>
                    <th>Puntaje</th>
                    <th>Perfil</th>
                </tr>
                </thead>
                <tbody>
                <!-- Aquí irían tus datocs dinámicos -->
                {{#ranking}}
                    <tr>
                        <td>{{username}}</td>
                        <td>{{puntaje_maximo}}</td>
                        <td>
                            <a href="/PW2-Preguntones/perfil/verPerfilUsuario?id={{usuario_id}}"
                            class="btn btn-success">Ver perfil</a>
                        </td>
                    </tr>
                {{/ranking}}
                <!-- Fin de datos dinámicos -->
                </tbody>
            </table>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>